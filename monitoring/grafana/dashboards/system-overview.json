{
  "title": "System & Containers Overview",
  "uid": "system-overview",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "stat",
      "title": "CPU Usage (host)",
      "id": 1,
      "gridPos": { "h": 6, "w": 6, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "100 - (avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "percent", "decimals": 1 }
      }
    },
    {
      "type": "stat",
      "title": "Memory Used (host)",
      "id": 2,
      "gridPos": { "h": 6, "w": 6, "x": 6, "y": 0 },
      "targets": [
        {
          "expr": "100 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes * 100)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "percent", "decimals": 1 }
      }
    },
    {
      "type": "stat",
      "title": "Disk Used /",
      "id": 3,
      "gridPos": { "h": 6, "w": 6, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "100 - (node_filesystem_avail_bytes{mountpoint=\"/\",fstype!=\"tmpfs\",fstype!=\"overlay\"} / node_filesystem_size_bytes{mountpoint=\"/\",fstype!=\"tmpfs\",fstype!=\"overlay\"} * 100)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "percent", "decimals": 1 }
      }
    },
    {
      "type": "stat",
      "title": "Load 1m",
      "id": 4,
      "gridPos": { "h": 6, "w": 6, "x": 18, "y": 0 },
      "targets": [
        {
          "expr": "node_load1",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": { "decimals": 2 }
      }
    },
    {
      "type": "timeseries",
      "title": "CPU Usage (host) %",
      "id": 5,
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 6 },
      "targets": [
        {
          "expr": "100 - (avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Memory Used (host) %",
      "id": 6,
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 6 },
      "targets": [
        {
          "expr": "100 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes * 100)",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Disk Used /",
      "id": 7,
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 14 },
      "targets": [
        {
          "expr": "100 - (node_filesystem_avail_bytes{mountpoint=\"/\",fstype!=\"tmpfs\",fstype!=\"overlay\"} / node_filesystem_size_bytes{mountpoint=\"/\",fstype!=\"tmpfs\",fstype!=\"overlay\"} * 100)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "percent", "decimals": 1 }
      }
    }
  ],
  "templating": { "list": [] },
  "time": { "from": "now-6h", "to": "now" }
}
